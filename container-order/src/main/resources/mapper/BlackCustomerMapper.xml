<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.fuguang.order.mapper.BlackCustomerMapper">
    <resultMap id="BaseResultMap" type="cn.fuguang.entity.BlackCustomerEntity">
        <result column="id" jdbcType="BIGINT" property="id"/>
        <result column="orderNo" jdbcType="VARCHAR" property="customerId"/>
        <result column="customerId" jdbcType="VARCHAR" property="status"/>
        <result column="createTime" jdbcType="DATE" property="createTime"/>
        <result column="updateTime" jdbcType="DATE" property="updateTime"/>
    </resultMap>

    <select id="queryBlackCustomer" parameterType="java.lang.String" resultMap="BaseResultMap">
        select *
        from black_customer
        where customerId = #{customerId,jdbcType=VARCHAR}
    </select>
</mapper>
