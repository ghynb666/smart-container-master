<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.fuguang.order.mapper.OrderInfoMapper">
    <resultMap id="BaseResultMap" type="cn.fuguang.entity.OrderInfoEntity">
        <result column="id" jdbcType="BIGINT" property="id"/>
        <result column="order_no" jdbcType="VARCHAR" property="orderNo"/>
        <result column="customer_id" jdbcType="VARCHAR" property="customerId"/>
        <result column="device_id" jdbcType="VARCHAR" property="deviceId"/>
        <result column="gate_id" jdbcType="VARCHAR" property="gateId"/>
        <result column="order_amount" jdbcType="DECIMAL" property="orderAmount"/>
        <result column="pay_amount" jdbcType="DECIMAL" property="payAmount"/>
        <result column="coupon_amount" jdbcType="DECIMAL" property="couponAmount"/>
        <result column="trx_time"  property="trxTime"/>
        <result column="pay_time"  property="payTime"/>
        <result column="order_status" jdbcType="VARCHAR" property="orderStatus"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="remarks" jdbcType="VARCHAR" property="remarks"/>
        <result column="procedure_type" jdbcType="VARCHAR" property="procedureType"/>
    </resultMap>

    <select id="queryUnpaidOrder" parameterType="java.lang.String" resultMap="BaseResultMap">
        select *
        from order_info
        where customer_id = #{customerId,jdbcType=VARCHAR}
        and order_status = 'UN_PAID'
    </select>

    <insert id="insert" parameterType="cn.fuguang.entity.OrderInfoEntity">
        insert into order_info (order_no, customer_id, device_id,
                                       gate_id , order_amount, pay_amount, coupon_amount, trx_time,
                                       pay_time,order_status,create_time,update_time,remarks,procedure_type)
        values (#{orderNo,jdbcType=VARCHAR}, #{customerId,jdbcType=VARCHAR}, #{deviceId},
                #{gateId,jdbcType=VARCHAR}, #{orderAmount,jdbcType=DECIMAL}, #{payAmount,jdbcType=DECIMAL},
                #{couponAmount,jdbcType=DECIMAL}, #{trxTime}, #{payTime},
                #{orderStatus,jdbcType=VARCHAR}, now(), now(), #{remarks,jdbcType=VARCHAR}, #{procedureType,jdbcType=VARCHAR})
    </insert>

    <select id="queryByOrderNo" parameterType="java.lang.String" resultMap="BaseResultMap">
        select *
        from order_info
        where order_no = #{orderNo,jdbcType=VARCHAR}
    </select>

    <update id="updateOrderStatus" parameterType="cn.fuguang.entity.OrderInfoEntity">
        update order_info
        set order_status = #{orderStatus}
            update_time = now()
        where order_no = #{orderNo} and order_status = #{oldOrderStatus}
    </update>
</mapper>
