<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.fuguang.device.mapper.DeviceInfoMapper">
    <resultMap id="BaseResultMap" type="cn.fuguang.entity.DeviceInfoEntity">
        <result column="id" jdbcType="BIGINT" property="id"/>
        <result column="device_id" jdbcType="VARCHAR" property="deviceId"/>
        <result column="deviceSn" jdbcType="VARCHAR" property="deviceSn"/>
        <result column="deviceName" jdbcType="VARCHAR" property="deviceName"/>
        <result column="device_status" jdbcType="VARCHAR" property="deviceStatus"/>
        <result column="deviceType" jdbcType="VARCHAR" property="deviceType"/>
        <result column="heatingSwitchStatus" jdbcType="DECIMAL" property="heatingSwitchStatus"/>
        <result column="heatingThreshold" jdbcType="DECIMAL" property="heatingThreshold"/>
        <result column="closeHeatingThreshold" jdbcType="DECIMAL" property="closeHeatingThreshold"/>
        <result column="province" jdbcType="VARCHAR" property="province"/>
        <result column="city" jdbcType="VARCHAR" property="city"/>
        <result column="county" jdbcType="VARCHAR" property="county"/>
        <result column="community" jdbcType="VARCHAR" property="community"/>
        <result column="address" jdbcType="VARCHAR" property="address"/>
        <result column="deviceDesc" jdbcType="VARCHAR" property="deviceDesc"/>
        <result column="lgtOnTime" jdbcType="VARCHAR" property="lgtOnTime"/>
        <result column="addrLocationGd" jdbcType="VARCHAR" property="addrLocationGd"/>
        <result column="addrLocationTx" jdbcType="VARCHAR" property="addrLocationTx"/>
        <result column="deviceVersion" jdbcType="VARCHAR" property="deviceVersion"/>
        <result column="createTime" jdbcType="DATE" property="createTime"/>
        <result column="updateTime" jdbcType="DATE" property="updateTime"/>
        <result column="remarks" jdbcType="VARCHAR" property="remarks"/>
    </resultMap>

    <select id="queryDeviceInfoById" parameterType="java.lang.String" resultMap="BaseResultMap">
        select *
        from device_info
        where deviceId = #{deviceId,jdbcType=VARCHAR}
    </select>

    <select id="queryByBo" parameterType="cn.fuguang.device.pojo.bo.DeviceInfoBo" resultMap="BaseResultMap">
        select *
        from device_info
        <where>
            <if test="deviceId !=null and deviceId!=''">
                and device_id = #{deviceId}
            </if>
            <if test="status !=null and status!=''">
                and status = #{status}
            </if>
        </where>
    </select>

    <update id="updateDeviceStatus" parameterType="cn.fuguang.entity.DeviceInfoEntity">
        update device_info
        set device_status = #{deviceStatus}
            update_time = now()
        where device_id = #{deviceId} and device_status = #{oldDeviceStatus}
    </update>

    <select id="queryByDeviceSn" parameterType="java.lang.String" resultMap="BaseResultMap">
        select *
        from device_info
        where device_sn = #{deviceSn,jdbcType=VARCHAR}
    </select>
</mapper>
